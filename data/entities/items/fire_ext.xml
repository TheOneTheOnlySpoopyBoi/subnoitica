<Entity tags="teleportable_NOT,wand,item">

	<AbilityComponent 
        amount_in_inventory="1"
        cooldown_frames="0"
        drop_as_item_on_death="1"
        entity_count="1"
        entity_file=""
        fast_projectile="0"
        mana_charge_speed="100"
		mana_max="100"
        max_amount_in_inventory="1"
        shooting_reduces_amount_in_inventory="0"
        sprite_file="data/items_gfx/fire_ext.png"
        swim_propel_amount="0"
        throw_as_item="0"
        ui_name="Fire extinguisher"
        use_gun_script="1"
		add_these_child_actions=""
		>
		<gun_config 
            shuffle_deck_when_empty="0"
            deck_capacity="1"
			actions_per_round="1"
            reload_time="1"
			speed_multiplier="1"
			spread_degrees="3" >
